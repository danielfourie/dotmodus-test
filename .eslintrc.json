{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "parser": "babel-eslint",
    "rules": {
        "quotes": ["warn", "single"],
        "indent": ["warn", "tab" , {
            "SwitchCase": 1
        }],
        "arrow-parens": ["warn", "as-needed"],
        "no-unused-vars": "warn",
        "object-curly-spacing": ["warn" , "always"]
    }
}
